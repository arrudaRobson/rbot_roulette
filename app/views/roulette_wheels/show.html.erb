<% @roulette_wheel.entries.each do |entry| %>
  <div class="js-entry" data-title="<%= entry.title %>" data-probability="<%= entry.probability %>" data-image="<%= entry.image.url %>"></div>
<% end %>

<div class="roulette-container">
	<div class="roulette" style="overflow: hidden; height: 128px;">
      <div class="roulette-inner" style="position: relative; top: 0px;">
        <% @roulette_wheel.entries.each do |entry| %>
          <img src="<%= entry.image.url %>" style="margin: 5px; display: block; width: <%= @roulette_wheel.width %>px; height: <%= @roulette_wheel.height %>px;">
        <% end %>
      </div>
	</div>
</div>

<input type="button" class="js-spin-on-click" value="Spin" style="margin-top: 5px;"/>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.9.0/jquery-ui.min.js"></script>
<script src="/js/vendor/random.min.js"></script>
<script src="/js/vendor/roulette.js"></script>
<script src="/js/index.js"></script>